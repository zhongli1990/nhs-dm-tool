# =============================================================================
# OpenLI DMM - Docker Compose Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your deployment.

# --- Port Configuration ---
DMM_BACKEND_PORT=9134
DMM_FRONTEND_PORT=9133
DMM_HTTP_PORT=9135
DMM_POSTGRES_PORT=9136

# --- Backend Configuration ---
DM_ENV=production
DM_LOG_LEVEL=INFO
DM_ALLOW_ORIGINS=http://localhost,http://localhost:9133,http://localhost:9135
DM_DATABASE_URL=postgresql://dmm_app:change_me_postgres_password@postgres:5432/dmm
DM_AUTH_BACKEND=postgres
DM_STATE_BACKEND=postgres
DM_RUN_MIGRATIONS=true
DM_SCHEMA_AUTOCREATE=false

# --- PostgreSQL Configuration ---
DMM_POSTGRES_DB=dmm
DMM_POSTGRES_USER=dmm_app
DMM_POSTGRES_PASSWORD=change_me_postgres_password

# --- Authentication ---
# IMPORTANT: Change this secret before deploying to production!
DMM_TOKEN_SECRET=change_me_to_a_strong_random_secret
DMM_TOKEN_TTL_SECONDS=43200
DMM_BOOTSTRAP_ADMIN_USERNAME=superadmin
DMM_BOOTSTRAP_ADMIN_EMAIL=superadmin@openli.local
DMM_BOOTSTRAP_ADMIN_PASSWORD=change_me_superadmin_password

# --- Frontend Configuration ---
# For production, set this to your public-facing URL (through nginx)
NEXT_PUBLIC_DM_API_BASE=http://localhost:9134
DM_INTERNAL_API_BASE=http://backend:9134
NEXT_PUBLIC_DMM_VERSION=0.2.2
